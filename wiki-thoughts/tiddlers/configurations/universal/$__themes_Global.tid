body.tw-body .story-river .body {
	font-family: "Lato", "Helvetica Neue", Helvetica, Arial, "Hiragino Sans GB", STHeiti, "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
	word-spacing: 1px;
}

.tw-site-title,
.story-river .tw-tiddler-title .titlebar .title,
.tw-tab-buttons button,
.story-river .body h1,
.story-river .body h2 {
	font-family: "Helvetica Neue", Helvetica, Arial, STHeiti, "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;	
}

body.tw-body {
	background: #ececec url(<<datauri "$:/themes/bg.png">>) repeat;
}

.tw-page-controls svg {
	height: 1.6em;
	padding-right: 0.6em;
}

.tw-tiddler-controls button svg {
	height: 0.7em;
	fill: #ececec;
}

hr {
	display: block;
	height: 1px;
	border: 0;
	border-top: 1px solid #e4e4e4;
	padding: 0;
}

.tw-search {
	padding-top: 10px;
	padding-bottom: 6px;
}

.tw-sidebar-lists .tw-search input {
	border: 1px solid #dddddd;
}

.tw-tiddler-frame {
	border-radius: 4px;
	box-shadow: rgba(0, 0, 0, 0.3) 0 1px 3px;
}

code {
	background-color: #ffffff;
	border: none;
	padding: 0;
}

pre {
	border: 1px solid #dddddd;
	background-color: #f8f8f8;
}

li > pre {
	margin-top: 0.5em;
	margin-bottom: 0.5em;
}

.tw-missing-tiddler-label {
	padding-right: 0.5em;
}

.tw-topbar-right {
	top: 5px;
	right: 5px;
}

.border {
	background: #fff;
	padding: 4px;
	border: 1px solid;
	border-color: #e5e5e5 #dbdbdb #d2d2d2;
	box-shadow: rgba(0, 0, 0, 0.1) 0 1px 2px;
}

.left {
	float: left;
	margin-right: 2em;
}

.right {
	float: right;
	margin-left: 2em;
}

html button {
	line-height: 1.3;
}

.tw-tab-buttons button {
	padding: 3px 5px 4px 5px;
}
