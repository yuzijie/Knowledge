  <span style="text-shadow: 0 1px 0 rgba(255,255,255, 0.8);">$caption$</span>
  </$button>
</$reveal>

<$reveal type="match" state=<<qualify "$:/state/toc/$caption$">> text="show">
<ol style="padding-left: 20px;">
